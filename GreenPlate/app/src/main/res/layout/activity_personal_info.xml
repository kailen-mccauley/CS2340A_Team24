<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:id="@+id/activity_personal_info">

    <!-- Header layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Personal Info\nScreen"
            android:textAlignment="center"
            android:textColor="@color/forestGreen"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Height (cm)"
                android:textColorHint="@color/darkBrown"
                android:textColor="@color/darkBrown"
                android:layout_marginHorizontal="5dp"
                android:inputType="number"/>
            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:hint="Weight (kg)"
                android:textColorHint="@color/darkBrown"
                android:textColor="@color/darkBrown"
                android:layout_marginHorizontal="5dp"
                android:inputType="number"/>
            <EditText
                android:id="@+id/genderEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:hint="Gender (M/F)"
                android:textColorHint="@color/darkBrown"
                android:textColor="@color/darkBrown"
                android:layout_marginHorizontal="0dp"/>
            <Button
                android:id="@+id/btn_submit_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:text="Submit"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/brown"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom navigation bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:padding="3dp"
        android:backgroundTint="@color/Olivine"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Column 1 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/ic_home_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

        <!-- Column 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_personal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/personal_info_foreground"
                app:tint="@color/White" />

        </RelativeLayout>

        <!-- Column 3 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_shopping"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/ic_shopping_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

        <!-- Column 4 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_recipe"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/recipe_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

        <!-- Column 5 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_ingredients"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/ic_ingredient_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

        <!-- Column 6 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_meal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/ic_meal_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

        <!-- Column 7 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_fitness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/Olivine"
                android:src="@drawable/ic_fitness_foreground"
                app:tint="@color/darkBrown"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>